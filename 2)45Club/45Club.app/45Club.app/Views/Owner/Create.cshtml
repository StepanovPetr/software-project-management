@model _45Club.app.Models.Dto.OwnerCreate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Owners</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="true">
                <label asp-for="TransportId" class="control-label"></label>
                <input asp-for="TransportId" class="form-control" value="@Model.TransportId" />
                <span asp-validation-for="TransportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                @*  <input asp-for="PersonId" class="form-control" />*@
               @* <span asp-validation-for="PersonId" class="text-danger"></span>*@
                <select asp-for="PersonId" class ="form-control" asp-items="@(new SelectList(Model.Persons, "Id", "Name"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @Html.Hidden("IsActive", true);
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
